{
	
	"compilerOptions": {
		
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": ["ES2022"],
		"types": ["node"],
		"useDefineForClassFields": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		
		"declaration": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"inlineSources": true,
		
		"strict": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": false,
		
		"rootDir": "src",
		"outDir": "dist",
		
		"baseUrl": "./",
		"paths": {
			"@/*": [ "src/*" ]
		}
		
	},
	
	"include": [
		"./src/**/*",
		"./package.json"
	],
	
	"exclude": [
	]
	
}