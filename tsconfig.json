{
	
	"compilerOptions": {
		
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": ["ESNext"],
		"types": ["node"],
		"useDefineForClassFields": true,
		
		"rootDir": "./",
		"outDir": "dist",
		
		"baseUrl": "./",
		"paths": {
			"@/*": [ "src/*" ],
			"@test/*": [ "test/*" ]
		}
		
	},
	
	"include": [
		"./src/**/*",
		"./test/**/*"
	],
	
	"exclude": [
	]
	
}